.table-layout-wrapper {
  width: 100%;
  height: 100%;
  padding: 15px;
  overflow: hidden;
  background: #f0f2f8;
  display: flex;
  justify-content: space-between;
  .tree-view {
    width: 200px;
    flex: 0 0 200px;
    background: #fff;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-right: 1px solid #eee;
    .tree-inner {
      height: 100%;
      overflow: hidden;
      padding: 20px 5px 20px 10px;
    }
  }
  .table-view {
    position: relative;
    flex: 1;
    background: #fff;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    .view-inner {
      padding: 20px 0 20px 20px;
    }
    .table-inner {
      padding-top: 10px;
      .bin-tag {
        margin: 0;
      }
      .bin-button {
        font-weight: normal;
      }
      .bin-button.is-disabled, .bin-button.is-disabled:focus, .bin-button.is-disabled:hover {
        background-color: transparent;
      }
    }

    // table-view 抽屉覆盖
    .bin-drawer-wrapper, .bin-drawer-wrapper.is-right .drawer-box {
      position: absolute;
    }
    .bin-drawer-wrapper .drawer-box .header {
      padding: 10px 20px;
    }
    .bin-drawer-wrapper .drawer-box .footer {
      text-align: center;
    }
  }
}

.button-bar {
  padding: 10px 0 0;
}

.filter-container {
  background #f8f9fb;
  border-radius: 4px;
  .row {
    display: flex;
    align-content: flex-start;
    overflow: hidden;
    padding: 10px 0;
    .filter-item {
      display: flex;
      align-items: center;
      .label {
        width: 100px;
        padding: 10px 0;
        font-size: 12px;
        color: #606266;
        text-align: center;
      }
      .bin-input-wrapper, .bin-select-wrapper {
        flex: 1;
      }
      .search-btn {
        padding-left: 20px;
        .open {
          display: inline-block;
          margin-left: 10px;
          color: rgb(32, 160, 255);
          font-size: 12px;
          cursor: pointer;
          &:hover {
            color: #337ab7;
          }
        }
      }
    }
  }
}

.page-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 48px;
  .bin-page-options {
    vertical-align: top;
  }
}

.bin-drawer.layout-inner {
  .bin-drawer-wrapper {
    .table-layout-wrapper {
      height: 700px;
      padding: 0;
    }
    .drawer-box .body {
      padding: 0;
    }
  }
}

// 输入框后面按钮宽度
.choose-btn.bin-input-wrapper-small {
  .bin-input-suffix {
    width: 58px;
  }
  .bin-input.bin-input-small.bin-input-with-suffix {
    padding-right: 65px;
  }
}
