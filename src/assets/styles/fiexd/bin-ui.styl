// 1: 横向滚动条隐藏
#app .bin-scrollbar__wrap {
  overflow-x: hidden;
}
// 2:menu行高设置
.side-menu-wrapper .bin-menu {
  line-height: 2em;
  .bin-menu-item, .bin-menu-submenu-title span, .bin-menu-submenu-title {
    > i:not(.icon-ios-arrow-down) {
      position: relative;
      top: -2px;
      font-size: 18px;
      vertical-align: middle;
    }
  }
}

.bin-drawer-wrapper .drawer-box {
  .header {
    padding: 19px 16px;
  }
  .body {
    height: calc(100% - 125px);
  }
}
// 2: 按钮间隔
.bin-button + .bin-button {
  margin-left: 10px;
}

.bin-button .iconfont {
  margin-right: 4px;
}
// 树=》可同步至bin-ui
.bin-tree ul li {
  margin: 0;
  line-height: 26px;
}
.bin-tree-arrow {
  vertical-align: top;
  line-height: 22px;
  margin-right: 4px;
  .icon-ios-arrow-forward {
    position: relative;
    top: -1px;
  }
}
.bin-tree-title {
  padding: 0 6px;
  line-height: 22px;
}
.bin-tree-title:hover {
  background-color: #e6f7ff;
}
.bin-tree-title-selected, .bin-tree-title-selected:hover {
  background-color: #1890ff;
  color: #fff;
}
//  表格
.bin-table-wrapper {
  border: none;
  .bin-loading {
    border: none;
  }
}
.bin-table-cell {
  padding: 0 6px;
}
.bin-table {
  .bin-table-header th, .bin-table-fixed-header th {
    color: #333;
    background-color: #f3faff;
  }
  th, td {
    line-height: 38px;
    border-bottom: none;
  }
  &:before, &:after {
    display: none;
  }
}

.bin-table-fixed-right::before, .bin-table-fixed::before {
  display: none;
}
.bin-table-fixed-right {
  box-shadow: 0 0 10px rgba(0, 0, 0, .12)
}
// 表单=》可同步至bin-ui
.bin-input[disabled], fieldset[disabled] .bin-input {
  background-color: #f9f9f9;
  color: #737d91;
}
//  container
.bin-container .bin-container-footer {
  line-height: 1.5em;
}

// 箭头指示=》可同步至bin-ui
.bin-input-number-handler-up-inner, .bin-input-number-handler-down-inner {
  top: 50%;
  margin-top: -6px;
}
